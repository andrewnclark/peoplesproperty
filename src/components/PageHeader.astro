---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="w-full bg-slate-50 border-b border-slate-200 py-12 md:py-16 text-center">
  <div class="container mx-auto px-6">
    <h1 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">{title}</h1>
    <div class="w-16 h-1 bg-brand-primary mx-auto rounded mb-4"></div>
    {subtitle && <p class="text-lg text-slate-600 max-w-2xl mx-auto">{subtitle}</p>}
  </div>
</section>
